<%-include('partials/header') %> <%-include('partials/sideMenu') %>
<section>
  <script src="/js/script.js"></script>

  <!-- Find a dog/cat page -->
  <form
    name="findPetForm"
    onsubmit="return validation_findPet()"
    method="get"
    action="/browse"
  >
    <h2>
      Please fill out the following form to find a pet fit for your needs and
      your requests:
    </h2>
    <label class="prompt"> What animal would you like to adopt: </label>
    <label for="cat">
      <input type="radio" name="animal" id="cat" value="cat" />
      Cat
    </label>
    <label for="dog">
      <input type="radio" name="animal" id="dog" value="dog" />
      Dog
    </label>
    <br />
    <br />
    <label class="prompt">Preferred Breed: </label>
    <select name="breed" id="breed">
      <option value="no preference" selected="selected">No Preference</option>
      <option value="siamese">Siamese Cat</option>
      <option value="maine coon">Maine Coone cat</option>
      <option value="persian">Persian cat</option>
      <option value="british shorthair">British Shorthair cat</option>
      <option value="ragdoll">Ragdoll cat</option>
      <option value="golden">Golden Retriever dog</option>
      <option value="german shepherd">German Shepherd dog</option>
      <option value="labrador">Labrador Retriever dog</option>
      <option value="bulldog">French Bulldog</option>
    </select>
    <br />
    <br />
    <label class="prompt">Preferred Age: </label>
    <select name="age" id="age">
      <option value="no preference" selected="selected">No Preference</option>
      <option value="0 to 6 months">0 to 6 months</option>
      <option value="7 months to 2 years">7 months to 2 years</option>
      <option value="3 to 6 years">3 to 6 years</option>
      <option value="7 to 10 years">7 to 10 years</option>
      <option value="11 to 14 years">11 to 14 years</option>
      <option value="15 years and older">15 years and older</option>
    </select>
    <br />
    <br />
    <label class="prompt"> Preferred Gender: </label>
    <label for="male">
      <input type="radio" name="gender" id="male" value="male" />
      Male
    </label>
    <label for="female">
      <input type="radio" name="gender" id="female" value="female" />
      Female
    </label>
    <label for="no-preference">
      <input
        type="radio"
        name="gender"
        id="no-preference"
        value="no preference"
      />
      No Preference
    </label>
    <br />
    <br />
    <label class="prompt">
      Does the animal have to get along with any of the following:
    </label>
    <br />
    <label for="along-dog">
      <input type="checkbox" name="along" id="along-dog" value="dog" />
      Dog
    </label>
    <label for="along-cat">
      <input type="checkbox" name="along" id="along-cat" value="cat" />
      Cat
    </label>
    <label for="along-children">
      <input
        type="checkbox"
        name="along"
        id="along-children"
        value="children"
      />
      Children
    </label>
    <br />
    <br />
    <input type="submit" value="Submit" />
    <input type="reset" value="Clear" />
  </form>
</section>
<%-include('partials/footer') %>
