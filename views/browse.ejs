<%-include('partials/header') %> <%-include('partials/sideMenu') %>
<section>
  <!-- Browse available pets page -->
  <div id="content_Pets">
    <% for (let i = 0; i < pets.length; i++) { %>
    <div class="content_info">
      <table>
        <caption>
          <%= pets[i].animal %>
        </caption>
        <tr>
          <td>
            <img src="<%= pets[i].image %>" alt="<%=pets[i].animal %>" height="145" width="142" />
          </td>
        </tr>

        <tr>
          <td>
            <ul>
              <li><%= pets[i].breed %></li>
              <li><%= pets[i].gender %></li>
              <li><%= pets[i].age %> old</li>
              <li><%= pets[i].alongDog === "yes" ? "Gets along with dogs":"Doesn't get along with dogs"%></li>
              <li><%= pets[i].alongCat === "yes"? "Gets along with cats":"Doesn't get along with cats"%></li>
              <li>
                <%= pets[i].alongChildren === "yes" ? "Suitable for families with small children":"Not suitable for families with small children"%>
              </li>
            </ul>
          </td>
          <td>
            <ul>
              <li>Additional info: <%= pets[i].comments %></li>
              <li>Current owner: <%= pets[i].ownerName %></li>
              <li>Contact: <%= pets[i].ownerEmail %></li>
              <li>Posted by: <%= pets[i].user %></li>
            </ul>
          </td>
        </tr>
      </table>
      <div class="content_input">
        <input type="button" value="Interested" />
      </div>
    </div>
    <% } %>
  </div>
</section>
<%-include('partials/footer') %>
